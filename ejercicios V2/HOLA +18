from datetime import date 
today = date.today() 
year = int(input("El a;o de nacimiento ")) 
mes = int(input("to mes "))
dia = int(input("to dia "))
my_birthday = date(year,mes, dia) 

my_birthday
time_to_birthday = abs(my_birthday - today) 
if time_to_birthday.days / 365 > 18: 
    print("Hola")
else:
    print("No hay hola para ti :( ") 
    
