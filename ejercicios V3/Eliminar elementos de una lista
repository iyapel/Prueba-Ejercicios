print("------ELIMINAR ELEMENTOS DE UNA LISTA------")

Milista = []
cond = 1

while cond == 1:
    elementos = input("Ingrese elementos en la lista separados por comas: ")
    Milista.extend(elementos.split(","))
    cond = int(input("Son todos los elementos de la lista que quiere agregar? 1-NO  2-SI "))
    cont = len(Milista)

Selec = int(input("Seleccione la ubicaci√≥n del elemento que quiere eliminar: "))
cont2 = 0
while cont < cont2:
    if cont == Selec:
        Milista.remove(int(Selec))

print(Milista)
